<Window x:Class="Z_Lab_TronOnDrugs_.DifficultyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Z_Lab_TronOnDrugs_"
        mc:Ignorable="d"
        Title="DifficultyWindow" Height="450" Width="800" WindowState="Maximized" WindowStyle="None">
    <Border BorderBrush="SkyBlue" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="6*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Grid.Background>
                <ImageBrush ImageSource="\Images\Background.png"/>
            </Grid.Background>

            <Grid Grid.Column="0" Grid.RowSpan="3">
                <Button Grid.Column="0" Click="Easy_Button_Click" Width="400" Height="600" Padding="10" Background="Transparent" BorderBrush="Transparent">
                    <Image Source="\Images\easy.png"/>
                </Button>
            </Grid>

            <Grid Grid.Column="1" Grid.RowSpan="3">
                <Button Grid.Column="0" Click="Medium_Button_Click" Width="400" Height="600" Padding="10" Background="Transparent" BorderBrush="Transparent">
                    <Image Source="\Images\medium.png"/>
                </Button>
            </Grid>

            <Grid Grid.Column="2" Grid.RowSpan="3">
                <Button Grid.Column="0" Click="Hard_Button_Click" Width="400" Height="600" Padding="10" Background="Transparent" BorderBrush="Transparent">
                    <Image Source="\Images\hard.png"/>
                </Button>
            </Grid>

            <Label Grid.Row="0" Grid.ColumnSpan="3" Content="CHOOSE DIFFICULTY:" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Bottom" FontSize="70" FontWeight="Bold" Foreground="SkyBlue"/>
            <Button Grid.Row="2" Grid.Column="1" Content="BACK" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="SkyBlue" Background="Transparent" FontWeight="Bold" FontSize="30" Padding="10" BorderBrush="SkyBlue" BorderThickness="1"  Click="Back_Button_Click" Width="350"/>
        </Grid>
    </Border>
</Window>
